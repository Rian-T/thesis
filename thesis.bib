@inproceedings{li-etal-2020-sentence,
	title        = {On the Sentence Embeddings from Pre-trained Language Models},
	author       = {Li, Bohan  and Zhou, Hao  and He, Junxian  and Wang, Mingxuan  and Yang, Yiming  and Li, Lei},
	year         = 2020,
