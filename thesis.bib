@article{rope,
	title        = {RoFormer: Enhanced transformer with Rotary Position Embedding},
	author       = {Jianlin Su and Murtadha Ahmed and Yu Lu and Shengfeng Pan and Wen Bo and Yunfeng Liu},
	year         = 2024,
	journal      = {Neurocomputing},
	volume       = 568,
