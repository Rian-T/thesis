@inproceedings{grivas-etal-2022-low,
	title        = {Low-Rank Softmax Can Have Unargmaxable Classes in Theory but Rarely in Practice},
	author       = {Grivas, Andreas  and Bogoychev, Nikolay  and Lopez, Adam},
