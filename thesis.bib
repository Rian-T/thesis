@article{guo2022visual,
	title        = {Visual attention network},
	author       = {Guo, Meng-Hao and Lu, Cheng-Ze and Liu, Zheng-Ning and Cheng, Ming-Ming and Hu, Shi-Min},
	year         = 2023,
	journal      = {Computational Visual Media},
	volume       = 9,
	number       = 4,
